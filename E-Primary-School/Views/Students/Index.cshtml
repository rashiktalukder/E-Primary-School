<h1>Hello Students</h1>
<br />

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Student List</h2>
    </div>

    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Students" class="btn btn-info form-control text-white">
            Insert Students
        </a>
    </div>

    <div class="col-12 border p-2">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>UserId</th>
                    <th>stdName</th>
                    <th>stdPassword</th>
                    <th>stdEmail</th>
                    <th>stdPhone</th>
                    <th>stdAddress</th>
                    <th>stdSection</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>

</div>

@section Scripts
{
    <script src="~/js/StudentList.js"></script>
}